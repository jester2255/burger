<h1>Eat-Da-Burger!!!</h1>


<div>
<h2>Tasty Burgers</h2>
<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
		<li>
			{{this.burger_name}}
			<form action="/{{this.id}}?_method=PUT" method="POST">
          	  <input type="hidden" name="eaten" value="true">
          	  <button type="submit">Devour!</button>
        	</form>
		</li>
	{{/unless}}
	{{/each}}

</ul>
</div>
<div>
<h2>DevouredBurgers</h2>
<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ul>
</div>

<h2>Add a Cat</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="brg">Burger Name:</label>
    <input type="text" id="brg" name="name">
  </div>

  <div class="form-group">
    <label for="devo">Devour?</label><br>
    <input type="radio" name="Devoured" value="1" > Create and devour!<br>
	<input type="radio" name="Devoured" value="0" checked> Create with devouring
  </div>

  <button type="submit">Add Burger</button>
</form>
