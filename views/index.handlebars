<h1>Eat-Da-Burger!!!</h1>


<div>
<h2>Tasty Burgers</h2>
<ul>
	{{#each burgers}}
	{{#unless this.devoured}}
		<li>
			{{this.burger_name}}
			<form action="/{{this.id}}?_method=PUT" method="POST">
          	  <input type="hidden" name="eaten" value="true">
          	  <button type="submit">Devour!</button>
        	</form>
		</li>
	{{/unless}}
	{{/each}}
</ul>
</div>
<div>
<h2>DevouredBurgers</h2>
<ul>
	{{#each burgers}}
		{{#if this.devoured}}
			<li>
				{{this.burger_name}}
			</li>
		{{/if}}
	{{/each}}
</ul>
</div>
